modules = ["android"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Android Build & Run"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "Android App Run"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "android_app"

[[workflows.workflow]]
name = "Android App Run"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew :app:installDebug"
waitForPort = 5000

[[workflows.workflow]]
name = "android_app"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew installDebug && adb shell am start -n com.example.expirydetector/.MainActivity"

[[workflows.workflow]]
name = "Android Build & Run"
author = 40833914
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew :app:clean"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew :app:assembleDebug"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "./gradlew :app:installDebug"

[deployment]
run = ["sh", "-c", "./gradlew :app:installDebug"]
build = ["sh", "-c", "./gradlew :app:assembleDebug"]
